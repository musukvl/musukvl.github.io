@using System
@model List<MusukContent.Models.HtmlBlockExtender.GalleryImage>

@{
    var id = "gallery_" + Guid.NewGuid().ToString("N");    
}
<div id="@id" class="carousel slide project-slider margin-50" data-ride="carousel">
    <div class="carousel-inner" role="listbox">
        @foreach (var image in Model)
        {
            <div class="item @if(image == Model.First()){<text>active</text>}">
                <div class="img-wrapper">
                    <img src="@image.ImageSrc" alt="@image.Alt" />
                </div>
            </div>
        }
        <!-- Indicators -->
        <div class="carousel-indicators-inner">
            <ol class="carousel-indicators positioned">
                @{
                    var slide = 0;
                    foreach (var image in Model)
                    {
                        <li data-target="#@id" data-slide-to="@slide" @if (slide == 0) { <text> class="active" </text>  }></li>
                        slide++;
                    }
                }
            </ol>
        </div>

    </div>
</div>